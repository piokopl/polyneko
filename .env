# ============================================
# POLYNEKO v2 - Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# POLYMARKET API CREDENTIALS
# ============================================
# These are generated automatically on first run if not provided
# Save them after first run to avoid regenerating
POLYMARKET_API_KEY=
POLYMARKET_SECRET=
POLYMARKET_PASSPHRASE=

# ============================================
# WALLET (required for PRODUCTION mode)
# ============================================
# Private key of your SIGNER wallet (the one that signs transactions)
# ⚠️ KEEP THIS SECRET! Never share or commit!
PRIVATE_KEY=

# (Optional) Your main wallet address - usually derived from PRIVATE_KEY
WALLET_ADDRESS=

# PROXY/FUNDER wallet - the wallet that holds USDC and pays for trades
# This is the Polymarket proxy wallet that you funded
# If not set, will use WALLET_ADDRESS
POLYMARKET_FUNDER_ADDRESS=

# Signature type for Polymarket API
# 0 = EOA / MetaMask / Hardware wallet (direct private key)
# 1 = Magic / Email login (most common for Polymarket users)
# 2 = Browser wallet proxy
SIGNATURE_TYPE=2

# ============================================
# TRADING PARAMETERS
# ============================================
# Base bet size per signal ($)
# Minimum practical: $5 (to afford 5 shares at any price)
BET_SIZE=5

# Max total cost per market per slot ($)
MAX_POSITION=20

# ============================================
# TRAILING / HEDGE PARAMETERS
# ============================================
# Trigger hedge when token price drops by this % (0.10 = 10%)
TRAIL_TRIGGER=0.10

# Hedge size as % of original bet (1.0 = 100% = full bet for small capital)
TRAIL_SIZE=1.0

# Maximum number of hedge trades per position (0 to disable)
MAX_HEDGES=4
HEDGE_CONFIRM_SECONDS=5
# ============================================
# ORDER EXECUTION
# ============================================
# Max retries for FOK orders (if not filled, retry at higher/lower price)
# More retries = better fill rate, but slower execution
ORDER_MAX_RETRIES=30

# Price increment per retry ($)
# Lower = more granular, fills closer to original price
ORDER_PRICE_INCREMENT=0.01

# Use GTC fallback if all FOK retries fail (true/false)
# WARNING: GTC orders may not fill immediately - can cause DB inconsistency
# Only enable if you understand the risks
ORDER_USE_GTC_FALLBACK=false

# ============================================
# SIGNAL PARAMETERS
# ============================================
# Minimum seconds between trades for same symbol
SIGNAL_COOLDOWN=30

# ============================================
# SYMBOLS TO TRADE
# ============================================
# Comma-separated list (fewer = less capital needed)
SYMBOLS=BTC,ETH,XRP,SOL

# ============================================
# MODE
# ============================================
# true = simulation (no real orders), false = production
SIMULATION_MODE=true

# ============================================
# DISCORD
# ============================================
# Discord webhook URL for notifications
DISCORD_WEBHOOK=

# ============================================
# DATABASE
# ============================================
# SQLite database file path
DB_PATH=polyneko.db

# ============================================
# DASHBOARD
# ============================================
# Enable web dashboard (true/false)
DASHBOARD_ENABLED=true

# Dashboard port
DASHBOARD_PORT=80

# ============================================
# ADVANCED (usually no need to change)
# ============================================
GAMMA_URL=https://gamma-api.polymarket.com
CLOB_URL=https://clob.polymarket.com
WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market

# ============================================
# CAPITAL REQUIREMENTS (for reference)
# ============================================
# With above settings:
#   Per slot: 2 symbols × ($5 bet + $5 hedge) = $20 max
#   Recommended capital: $100-150 (5-7x buffer)
#
# For even smaller capital, set MAX_HEDGES=0:
#   Per slot: 2 symbols × $5 = $10 max
#   Minimum capital: $50-75
#
# Note: Polymarket minimum order is 5 shares
#   At $0.10/share = $0.50 cost
#   At $0.90/share = $4.50 cost

# ============================================
# LOGGING
# ============================================
# Log file path (captures DEBUG level - all details)
LOG_FILE=polyneko.log
